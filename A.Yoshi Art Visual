            transition: opacity 1s ease-in-out;
            /* Adicionado overflow para rolagem na tela principal, não no body */
            overflow: hidden;
        }

        #main-screen.visible {
            opacity: 1;
        }

        /* Estilo da barra lateral */
        .sidebar {
            width: 80px;
            background-color: #2e403c;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-shrink: 0;
        }

        .sidebar h1 {
            color: white;
            font-size: 20px;
            font-weight: bold;
            transform: rotate(-90deg);
            white-space: nowrap;
        }

        /* Estilo da área de conteúdo (grid) */
        .content-grid {
            flex-grow: 1;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;

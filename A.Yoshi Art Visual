<body>

    <div id="splash-screen">
        <img src="https://lh3.googleusercontent.com/d/1jlViMQooMu3i6rstjHIOQq492YfA3ajQ" alt="Brasão da Marca" class="blinking-logo">
    </div>

    <div id="main-screen">
        <div class="sidebar">
            <h1>TABELA DE PREÇO</h1>
        </div>

        <div class="content-grid" id="product-list">
        </div>
    </div>

    <div id="fullscreen-modal">
        <span class="close-btn">×</span>
        <img id="fullscreen-image" src="" alt="Imagem em tela cheia">
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const splashScreen = document.getElementById('splash-screen');
            const mainScreen = document.getElementById('main-screen');
            const fullscreenModal = document.getElementById('fullscreen-modal');
            const fullscreenImage = document.getElementById('fullscreen-image');
            const closeBtn = document.querySelector('.close-btn');

            const products = [
                { imageUrl: 'https://lh3.googleusercontent.com/d/1_G-fjmPaD1KoHcA_bHksVy9x6zN7WD-8', code: 'Site/App do Time', description: '*Criação de e-mail institucional para o time. *Configuração e publicação de site em conta GitHub Pages. *Organização de conta no Google Drive para armazenamento de arquivos e imagens. *Desenvolvimento de identidade visual inicial: brasão e imagem de fundo na tela de carregamento. *Estruturação do layout da tela inicial com design personalizado. *Implementação de menus principais: Notícias, Jogadores, História, Redes Sociais, Patrocinadores e Galeria.', retailPrice: 'Criação R$150,00 / Dominio R$250,00 / Atualização R$15,00' },
                { imageUrl: 'https://lh3.googleusercontent.com/d/1ZrdQ5vRKu75nr-YHKdqrhcbbPeQsdoBp', code: 'Cartaz/Baner Jogo', description: 'Cataz e Bernner *Dia do jogo, *Escalação do time, *Logo/brasão de time e capeonato, Mascote Time em .PNG', retailPrice: 'R$15,00' },
                { imageUrl: 'https://lh3.googleusercontent.com/d/1SC7N5ITTKcqWg_rcp7AbxdjtVxX8Vzdu', code: 'Banner Animado', description: 'Cartaz e Banner time Animado .GIF ou .MP4', retailPrice: 'R$25,00' },
                { imageUrl: 'https://lh3.googleusercontent.com/d/1bZ1qn5-_0TB07Yrybcf3K1BR2N6LPUsd', code: 'Figurinha Jogador', description: 'Figurinhas pesonalkizada para jogador.', retailPrice: 'R$15,00' },
                { imageUrl: 'https://lh3.googleusercontent.com/d/1KcrzMT81PhmowmLoYEMu7mfGJ1EjU5Iz', code: 'Brasão e Mascote', description: 'Criação de brasão e mascote em .PNG para times e eventros', retailPrice: 'R$50,00' },
                { imageUrl: 'https://lh3.googleusercontent.com/d/19s_Q8swdAtKh1cwte0aMA_eFf3iiqV4X', code: 'Curriculo', description: 'Curriculos simples ou personalizado em .PDF .', retailPrice: 'A partir de R$10,00' },
                { imageUrl: 'https://lh3.googleusercontent.com/d/1IEtoHSML32djZ-WwLWA5uwcoDXVmXATj', code: 'Logo', description: 'Criação de logos, banners e cartazer para sua empresa.', retailPrice: 'A partir de R$15,00' }
            ];

            function createProductCard(product) {
                const card = document.createElement('div');
                card.className = 'product-card';
                card.innerHTML = `
                    <img src="${product.imageUrl}" alt="Imagem do Produto ${product.code}">
                    <p class="code">  ${product.code}</p>
                    <p>${product.description}</p>
                    <p class="price"><strong>Valor:</strong> ${product.retailPrice}</p>
                    <button class="whatsapp-button product-whatsapp-btn" data-product-code="${product.code}">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="Ícone do WhatsApp">
                        Consultar no WhatsApp
                    </button>
                `;
                return card;
            }

            const productList = document.getElementById('product-list');
            products.forEach(product => {
                const card = createProductCard(product);
                productList.appendChild(card);
            });

            document.querySelectorAll('.product-card img').forEach(image => {
                image.addEventListener('click', (event) => {
                    fullscreenImage.src = event.target.src;
                    fullscreenModal.classList.add('visible');
                });
            });

            closeBtn.addEventListener('click', () => {
                fullscreenModal.classList.remove('visible');
            });
            
            fullscreenModal.addEventListener('click', (event) => {
                if (event.target === fullscreenModal) {
                    fullscreenModal.classList.remove('visible');
                }
            });

            document.querySelectorAll('.product-whatsapp-btn').forEach(button => {
                button.addEventListener('click', () => {
                    const productCode = button.getAttribute('data-product-code');
                    const phoneNumber = '5543984399533'; 
                    const message = `Olá! Tenho interesse no produto de código: ${productCode}. Poderia me dar mais informações?`;
                    
                    const whatsappLink = `https://api.whatsapp.com/send?phone=${phoneNumber}&text=${encodeURIComponent(message)}`;
                    window.open(whatsappLink, '_blank');
                });
            });

            setTimeout(() => {
                splashScreen.classList.add('hidden');
                mainScreen.classList.add('visible');
            }, 3000);
        });
    </script>
</body>
</html>

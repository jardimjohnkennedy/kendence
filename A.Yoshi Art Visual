        .close-btn {
            position: absolute;
            top: 20px;
            right: 30px;
            color: white;
            font-size: 40px;
            font-weight: bold;
            cursor: pointer;
        }
        
        /* Media Queries para responsividade */
        @media (max-width: 768px) {
            /* Oculta a barra lateral em telas menores que 768px */
            .sidebar {
                display: none;
            }

            /* Faz o layout principal ocupar a tela inteira */
            #main-screen {
                display: block;
                height: auto;
                overflow-y: auto;
            }
            
            /* Ajusta a grade para 1 coluna em telas menores */
            .content-grid {
                grid-template-columns: 1fr;
                padding-top: 20px; /* Garante que o topo da página não fique "preso" */
            }

            /* Centraliza a grade */
            .product-card {
                margin: 0 auto;
            }

            /* Garante que o modal de tela cheia se adapte a celulares */
            #fullscreen-modal img {
